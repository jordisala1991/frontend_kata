---
export interface Props extends astroHTML.JSX.HTMLAttributes {
    image: string;
    title: string;
    author: string;
}

const { image, title, author } = Astro.props;
---
<style lang="scss">
	.gallery-item {
		position: relative;
		width: 80%;

		@media screen and (min-width: 50rem) {
			width: 25%;
			max-width: 19.375rem;

			&:nth-child(4n + 1) {
				order: 1;
			}

			&:nth-child(4n + 2) {
				order: 2;
			}

			&:nth-child(4n + 3) {
				order: 3;
			}

			&:nth-child(4n) {
				order: 4;
			}
		}

		&::after {
			content: '';
			position: absolute;
			top: 0;
			left: 0;
			right: 0;
			bottom: 0;
			background: linear-gradient(to bottom, transparent 0%, black 100%);
		}

		&-image {
			width: 100%;
			height: 100%;
			background: linear-gradient(black, red);
		}

		&-absolute {
			position: absolute;
			bottom: 0;
			left: 0;
			padding: 55px 32px;
			width: 100%;
			z-index: 1;
		}

		&-title {
			padding-bottom: 6px;
			font-size: 24px;
		}

		&-title,
		&-author {
			color: #fff;
			display: block;
		}
	}
</style>

<div class="gallery-item">
    <img class="gallery-item-image" src={image}>
	<span class="gallery-item-absolute">
		<span class="gallery-item-title">{title}</span>
		<span class="gallery-item-author">{author}</span>
	</span>
</div>